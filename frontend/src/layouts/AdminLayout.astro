---
export const prerender = false;

import '../styles/globals.css';
import { getTokenFromCookies, validateToken } from '../lib/auth';

const token = getTokenFromCookies(Astro.request.headers.get('cookie'));
if (!token) {
  return Astro.redirect('/admin/login');
}

const user = await validateToken(token);
if (!user) {
  return Astro.redirect('/admin/login');
}

const { title = 'Admin' } = Astro.props;

const currentPath = Astro.url.pathname;
const navItems = [
  { href: '/admin', label: 'Dashboard', icon: '◻' },
  { href: '/admin/productos', label: 'Productos', icon: '◻' },
  { href: '/admin/categorias', label: 'Categorias', icon: '◻' },
];
---

<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title} - Admin Panel</title>
  <meta name="robots" content="noindex, nofollow" />
</head>
<body class="bg-[#F5F1E4] text-tinta font-serif min-h-screen">
  <div class="flex min-h-screen">
    <!-- Sidebar -->
    <aside class="w-56 bg-carbón text-crema p-6 space-y-8 hidden md:flex md:flex-col shrink-0 fixed top-0 left-0 h-screen overflow-y-auto">
      <a href="/admin" class="text-sm uppercase tracking-tightish font-bold block">
        Galeria Admin
      </a>

      <nav class="space-y-3 text-sm flex-1">
        {navItems.map((item) => (
          <a
            href={item.href}
            class={`block py-1 hover:opacity-70 transition ${
              currentPath === item.href ? 'opacity-100 font-bold' : 'opacity-70'
            }`}
          >
            {item.label}
          </a>
        ))}
      </nav>

      <div class="space-y-3 text-sm border-t border-crema/20 pt-4">
        <a href="/" target="_blank" class="block hover:opacity-70 opacity-70">Ver Sitio</a>
        <button id="logoutBtn" class="block hover:opacity-70 opacity-70 text-left cursor-pointer">
          Cerrar Sesion
        </button>
      </div>
    </aside>

    <!-- Mobile header -->
    <div class="md:hidden fixed top-0 left-0 right-0 z-50 bg-carbón text-crema px-4 py-3 flex items-center justify-between">
      <a href="/admin" class="text-sm uppercase tracking-tightish font-bold">Admin</a>
      <div class="flex gap-4 text-xs">
        <a href="/admin/productos" class="hover:opacity-70">Productos</a>
        <a href="/admin/categorias" class="hover:opacity-70">Categorias</a>
        <button id="logoutBtnMobile" class="hover:opacity-70 cursor-pointer">Salir</button>
      </div>
    </div>

    <!-- Page transition overlay -->
    <div id="pageTransition" class="fixed inset-0 z-[100] bg-[#F5F1E4]/80 flex items-center justify-center hidden">
      <div class="flex flex-col items-center gap-3">
        <svg class="animate-spin w-8 h-8" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="#3C3A37" stroke-width="3" />
          <path class="opacity-75" fill="#3C3A37" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4z" />
        </svg>
        <span class="text-xs uppercase tracking-[-0.01em] text-[#3C3A37]/60">Cargando...</span>
      </div>
    </div>

    <!-- Main content -->
    <main class="flex-1 p-6 md:p-8 overflow-y-auto mt-12 md:mt-0 md:ml-56">
      <slot />
    </main>
  </div>

  <script>
    const transition = document.getElementById('pageTransition');

    // Show spinner on admin navigation links
    document.querySelectorAll('a[href^="/admin"]').forEach((link) => {
      link.addEventListener('click', (e) => {
        const href = (e.currentTarget as HTMLAnchorElement).getAttribute('href');
        // Skip if same page or has target="_blank"
        if (href === window.location.pathname || (e.currentTarget as HTMLAnchorElement).target === '_blank') return;
        transition?.classList.remove('hidden');
      });
    });

    // Hide on back/forward navigation
    window.addEventListener('pageshow', (e) => {
      if (e.persisted) transition?.classList.add('hidden');
    });

    document.getElementById('logoutBtn')?.addEventListener('click', () => {
      transition?.classList.remove('hidden');
      document.cookie = 'auth_token=; Max-Age=0; path=/';
      window.location.href = '/admin/login';
    });
    document.getElementById('logoutBtnMobile')?.addEventListener('click', () => {
      transition?.classList.remove('hidden');
      document.cookie = 'auth_token=; Max-Age=0; path=/';
      window.location.href = '/admin/login';
    });
  </script>
</body>
</html>
