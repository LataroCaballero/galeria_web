---
const { src = '/images/hero.jpg', alt = 'Hero' } = Astro.props;
const hasContent = Astro.slots.has('default');
---
<section id="top" class="relative">
  <img src={src} alt={alt} class="w-full h-[70svh] md:h-[85svh] object-cover" loading="eager" />
  <div class="absolute inset-0 bg-gradient-to-t from-black/10 to-transparent"></div>
  <div class="absolute inset-x-0 bottom-6 container text-white space-y-2">
    <h1 class="font-serif text-2xl md:text-3xl tracking-tightish">GALER√çA</h1>
    {hasContent && (
      <div class="max-w-xl text-sm md:text-base leading-6 md:leading-7">
        <slot />
      </div>
    )}
  </div>
</section>