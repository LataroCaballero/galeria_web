---
const { title } = Astro.props;
---
<section class="flex flex-col md:grid md:grid-cols-2 h-screen overflow-hidden">

  <!-- Columna de texto -->
  <div class="flex flex-col justify-center items-center text-center 
              px-8 md:px-20 bg-[#F5F1E4] 
              h-auto md:h-screen">
    {title && (
      <h2 class="font-serif text-2xl font-bold mb-6 tracking-tightish uppercase">
        {title}
      </h2>
    )}
    <div class="space-y-5 font-serif text-md leading-relaxed text-black/80 max-w-lg">
      <slot name="copy" />
    </div>
  </div>

  <!-- Columna de imagen -->
  <div class="flex-1 w-full md:w-[50vw] relative h-[50vh] md:h-screen">
    <slot />
  </div>
</section>
