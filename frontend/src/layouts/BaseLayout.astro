---
import '../styles/globals.css';
import Navbar from "../components/Navbar.astro";

interface Props {
  title?: string;
  description?: string;
  image?: string;
  darkMode?: boolean;
  showNavbar?: boolean;
}

const {
  title = "Galería Estudio",
  description = "Arquitectura & Interiorismo - Galería Estudio",
  image = "/images/og-hero.jpg",
  darkMode = false,
  showNavbar = true,
} = Astro.props;
---
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} - Galería Estudio</title>
    <meta name="description" content={description} />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="og:type" content="website" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />

    <!-- Resource hints -->
    <link rel="preload" href="/fonts/Perpetua-Regular.woff2" as="font" type="font/woff2" crossorigin />
    <link rel="preconnect" href="https://res.cloudinary.com" />
    <link rel="dns-prefetch" href="https://res.cloudinary.com" />

    <slot name="head" />
  </head>
  <body class={`${darkMode ? 'bg-dark text-cream' : 'bg-[#F5F1E4] text-dark'}`}>

    <main class="">
      <slot />
    </main>
  </body>
</html>
